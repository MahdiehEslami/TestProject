@model UpdateUserViewModel

<form asp-controller="User" asp-action="Update" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input type="text" asp-for="UserName" class="form-control" maxlength="50" />
        <span asp-validation-for="UserName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control" maxlength="100" />
        <span asp-validation-for="Email"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="save" />
</form>
