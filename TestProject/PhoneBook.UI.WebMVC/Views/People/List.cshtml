@model List<Person>

<h1>List of Person</h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>FullName</th>
        <th>Email</th>
        <th>Command</th>
    </tr>
    @if (Model != null && Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PersonId</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Email</td>
                <td>
                    <a asp-controller="People" asp-action="Detail" asp-route-Id="@item.PersonId">Detail</a>
                    |
                    <a asp-controller="People" asp-action="Update" asp-route-Id="@item.PersonId">Update</a>
                    |
                    <a asp-controller="People" asp-action="Delete" asp-route-Id="@item.PersonId">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <th colspan="4"><h2>There is no Data</h2></th>
        </tr>
    }

</table>